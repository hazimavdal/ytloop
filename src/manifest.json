{
  "name": "YTAutoReplay",
  "version": "1.0",
  "description": "Auto-replay YouTube videos",
  "manifest_version": 2,
  "icons": {"128": "./assets/icon.png"},
  "page_action": {
    "default_popup": "index.html",
    "default_icon": "./assets/icon.png",
    "default_title": "Auto-replay YouTube videos"
  },
  "content_scripts": [
    {
      "js": [
        "./lib/jquery.min.js",
        "./js/main.js"
      ],
      "matches": [
        "*://*.youtube.com/*"
      ]
    }
  ],

  "background": {
    "scripts": ["./js/background.js"],
    "persistent": false
  },

  "permissions": [
    "tabs",
    "storage",
    "declarativeContent",
    "*://*.youtube.com/*"
  ]
}